<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="手机号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_phone"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="11"
            android:id="@+id/activity_login_phone_et"
            app:layout_constraintBottom_toBottomOf="@+id/activity_login_phone"
            app:layout_constraintStart_toEndOf="@+id/activity_login_phone"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            android:hint="请输入手机号码"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"/>

    <TextView
            android:text="密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/activity_login_password"
            app:layout_constraintStart_toStartOf="@+id/activity_login_phone"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_phone"
            android:layout_marginTop="128dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:id="@+id/activity_login_password_et"
            android:hint="请输入密码(666666)"
            android:maxLength="6"
            android:gravity="left|center"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="@+id/activity_login_password"
            app:layout_constraintEnd_toEndOf="@+id/activity_login_phone_et"
            app:layout_constraintStart_toStartOf="@+id/activity_login_phone_et"/>

    <CheckBox
            android:text="记住密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_checkBox"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_password"
            android:layout_marginTop="44dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"/>

    <Button
            android:text="登录"
            android:layout_width="338dp"
            android:layout_height="44dp"
            android:id="@+id/activity_login_btn"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_login_checkBox"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/activity_login_checkBox"
            android:layout_marginLeft="8dp"/>

</android.support.constraint.ConstraintLayout>